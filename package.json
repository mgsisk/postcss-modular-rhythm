    "test": "test"
  },
  "dependencies": {
    "postcss": "^7.0.27"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^1.0.0",
    "@mgsisk/remark-lint-config": "^0.2.0",
    "eslint": "^6.8.0",
    "jsonlint": "^1.6.3",
