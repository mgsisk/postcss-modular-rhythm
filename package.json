{
  "name": "@mgsisk/postcss-modular-rhythm",
  "version": "0.1.0",
  "description": "PostCSS plugin that adds modular scale and vertical rhythm units to CSS.",
  "main": "src/index.js",
  "scripts": {
    "clean": "find . -name '*.DS_Store' -type f -delete",
    "lint": "npm run lint.js",
    "lint.js": "eslint '.*.js' 'src/**/*.js' 'tests/**/*.js'",
    "lint.json": "find . -name '*.json' ! -path '*/node_modules/*' | xargs -L1 jsonlint -q",
    "lint.md": "remark .",
    "lint.yml": "find . -name '*.yml' ! -path '*/node_modules/*' | xargs -L1 js-yaml",
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "test": "npm run lint.js && tap tests --coverage-report=lcovonly"
  },
  "repository": "github:mgsisk/postcss-modular-rhythm",
  "keywords": [
    "css",
    "postcss",
    "postcss-plugin",
    "modular-scale",
    "vertical-rhythm"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": {
    "email": "help@mgsisk.com",
    "url": "https://github.com/mgsisk/postcss-modular-rhythm/issues"
  },
  "homepage": "https://github.com/mgsisk/postcss-modular-rhythm#readme",
  "dependencies": {
    "postcss": "^7.0.6"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^0.5.0",
    "@mgsisk/remark-lint-config": "^0.1.0",
    "eslint": "^5.9.0",
    "js-yaml": "^3.12.0",
    "jsonlint": "^1.6.3",
    "remark-cli": "^6.0.1",
    "tap": "^12.1.0"
  }
}
