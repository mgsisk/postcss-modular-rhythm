{
  "name": "@mgsisk/postcss-modular-rhythm",
  "version": "0.2.0",
  "description": "PostCSS plugin that adds modular scale and vertical rhythm units to CSS.",
  "main": "src/index.js",
  "scripts": {
    "clean": "find . -name '*.DS_Store' -type f -delete",
    "lint.js": "eslint '**/*.js' '**/.*.js'",
    "lint.json": "find . \\( -name '*.json' -o -name '.*.json' \\) ! -path '*/node_modules/*' ! -path '*/vendor/*' ! -path '*/.nyc_output/*' | xargs -L1 jsonlint -q",
    "lint.md": "remark .",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "test": "npm run lint.js; tap tests --coverage-report=lcovonly"
  },
  "repository": "github:mgsisk/postcss-modular-rhythm",
  "keywords": [
    "css",
    "modular-scale",
    "postcss",
    "postcss-plugin",
    "vertical-rhythm"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": "https://github.com/mgsisk/postcss-modular-rhythm/issues",
  "homepage": "https://github.com/mgsisk/postcss-modular-rhythm",
  "dependencies": {
    "postcss": "^7.0.14"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^0.6.2",
    "@mgsisk/remark-lint-config": "^0.1.2",
    "eslint": "^5.15.3",
    "jsonlint": "^1.6.3",
    "remark-cli": "^6.0.1",
    "tap": "^12.6.0",
    "yaml-lint": "^1.2.4"
  }
}
